moon_base_soldier_sound{

  _group{
    _tags:t="sound"
    human_breath_sound__baseBreathShortness:r=0.4
    human_breath_sound__breathShortnessStart:r=0.0
  }

  "sound_irqs:shared:object"{
    _tags:t="sound"

    "grenade_take:object"{
      type:t="grenadeActivate"
    }

    "weaponChangeStart:object"{
      hero:t="player/walker/ww2_soldier/foley_mov/common/wpn_change_start"
    }

    "weaponChangeEnd:object"{
      hero:t="player/walker/ww2_soldier/foley_mov/common/wpn_change_end"
    }

    "rm_40_fire:object"{
      path:t="/weapon/antivehicle/mortar_rm_40/reload1/change_ammo"
    }

    "climb_ladder:object"{
      hero:t="events/moonbase/player/walker/moon_soldier/foley_mov/common/climb_stair"
      enemy:t="enemy/walker/ww2_soldier/foley_mov/common/climb_stair"
    }

    "swim_onwater:object"{
      path:t="/walker/ww2_soldier/foley_mov/swim/hand"
    }

    "swim_still:object"{
      path:t="/walker/ww2_soldier/foley_mov/swim/leg"
    }
  }

  "human_steps_sound__path:shared:object"{
    _tags:t="sound"
    hero:t="events/moonbase/player/walker/moon_soldier/foley_mov"
    enemy:t="enemy/walker/ww2_soldier/foley_mov"
  }

  "human_voice_sound__path:shared:object"{
    _tags:t="sound"

    "options:array"{

      "male:object"{
        voice0:b=yes
        hero:t="events/moonbase/player/walker/moon_soldier/voice_fx"
        enemy:t="enemy/walker/ww2_soldier01/voice_fx"
      }

      "male:object"{
        voice1:b=yes
        hero:t="events/moonbase/player/walker/moon_soldier/voice_fx"
        enemy:t="enemy/walker/ww2_soldier02/voice_fx"
      }

      "male:object"{
        hero:t="events/moonbase/player/walker/moon_soldier/voice_fx"
        enemy:t="enemy/walker/ww2_soldier03/voice_fx"
      }
    }
  }

  "human_idle_sound__paths:shared:object"{
    _tags:t="sound"

    "idleState:object"{
      hero:t="events/moonbase/player/walker/moon_soldier/voice_fx/idle"
    }
  }
}