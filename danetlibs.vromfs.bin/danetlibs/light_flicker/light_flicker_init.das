options no_aot

require app
require ecs.fs
require ECSGlobalTags


[export]
def load_light_flicker(base_path : string) : bool
  var ok = true

  if ecs_has_tag("render") || app::get_game_name() == "aot"
    ok = load_sub_folder(base_path, "render") && ok

  if ecs_has_tag("sound") || app::get_game_name() == "aot"
    ok = load_sub_folder(base_path, "sound") && ok

  return ok


[export]
def test()
  let ok = load_light_flicker("%danetlibs/light_flicker")
  assert(ok)
